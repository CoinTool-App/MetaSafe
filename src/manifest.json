{
    "manifest_version": 3,
    "name": "CoinTool - MetaSafe",
    "description": "__MSG_pluginDesc__",
    "background": {
        "service_worker": "background.bundle.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icon-34.png"
    },
    "icons": {
        "128": "icon-128.png"
    },
    "externally_connectable": {
        "matches": [
            "*://localhost/*"
        ]
    },
    "permissions": [
        "storage",
        "background"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "contentScript.bundle.js",
                "cointool-receive-data.js"
            ],
            "css": [
                "content.styles.css"
            ],
            "run_at": "document_end",
            "all_frames": true
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "content.styles.css",
                "icon-128.png",
                "icon-34.png",
                "contentScript.bundle.js",
                "contentProxy.bundle.js"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "default_locale": "en"
}